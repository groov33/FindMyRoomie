        <div class="smallboxone">
            <div class="bullets">
               <a class="sidebutton" href="registerpage.html"> Personal Details </a>
            </div>
            <div class="bullets">
               <a class="sidebutton" href="registerpage2.html"> Basic Information </a>
            </div>
